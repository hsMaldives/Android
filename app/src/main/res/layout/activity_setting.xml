<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.hansung.maldives.android.activity.SettingActivity">

    <Switch
        android:id="@+id/lockScreenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LockScreen On/Off"
        android:layout_marginTop="198dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="97dp"
        android:layout_marginEnd="97dp" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification On/Off"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/lockScreenSwitch"
        android:layout_alignRight="@+id/lockScreenSwitch"
        android:layout_alignEnd="@+id/lockScreenSwitch" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_black_24dp"
        android:layout_alignBottom="@+id/notificationSwitch"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notificationSwitch"
        android:layout_toLeftOf="@+id/notificationSwitch"
        android:layout_toStartOf="@+id/notificationSwitch"
        app:srcCompat="@drawable/ic_screen_lock_portrait_black_24dp" />

</RelativeLayout>
