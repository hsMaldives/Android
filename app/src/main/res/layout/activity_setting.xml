<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ac.hansung.maldives.android.activity.SettingActivity">

    <Switch
        android:id="@+id/lockScreenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LockScreen On/Off"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification On/Off"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/lockScreenSwitch"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        app:srcCompat="@drawable/ic_notifications_black_24dp"
        android:layout_alignTop="@+id/notificationSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notificationSwitch"
        android:layout_toLeftOf="@+id/notificationSwitch"
        android:layout_toStartOf="@+id/notificationSwitch"
        app:srcCompat="@drawable/ic_screen_lock_portrait_black_24dp" />

</RelativeLayout>
